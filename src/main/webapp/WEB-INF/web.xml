<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>administration</servlet-name>
        <servlet-class>com.mukwano.SystemConfigurationDashboardAuthentication.administration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administration</servlet-name>
        <url-pattern>/administration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>productSalesManagement</servlet-name>
        <servlet-class>com.mukwano.ProductAndSalesManagement.productSalesManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productSalesManagement</servlet-name>
        <url-pattern>/productSalesManagement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>staffManagement</servlet-name>
        <servlet-class>com.mukwano.HRManagement.staffManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>staffManagement</servlet-name>
        <url-pattern>/staffManagement</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>customer</servlet-name>
        <servlet-class>com.mukwano.CustomerBaseTrackingAndAdvisory.customer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>likes</servlet-name>
        <servlet-class>com.mukwano.ProductAndSalesManagement.likes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>likes</servlet-name>
        <url-pattern>/likes</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>com.mukwano.SystemConfigurationDashboardAuthentication.dashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>com.mukwano.Reporting.report</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
</web-app>